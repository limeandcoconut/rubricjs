{
  "name": "rubricjs",
  "version": "0.1.1",
  "description": "An es6 component, entity, system, framework with a minimal core.",
  "main": "dist/index.js",
  "scripts": {
    "start": "webpack --watch",
    "test": "ava --tap | tap-nyan",
    "test-spec": "ava --tap | tap-spec",
    "build": "babel src --out-dir dist",
    "prepublish": "npm run build",
    "ava": "nyc --reporter=json ava",
    "coverage": ". ./bin/coverage.sh",
    "watch": "onchange 'src/*.js' 'test/*.js' -i -- npm run coverage"
  },
  "repository": {
    "type": "git",
    "url": "github.com/limeandcoconut/rubricjs"
  },
  "keywords": [
    "ces",
    "component",
    "entity",
    "system",
    "game",
    "framework",
    "engine",
    "raf",
    "loop",
    "update",
    "render"
  ],
  "author": "Jacob A Smith",
  "license": "MIT",
  "dependencies": {
    "abstract-class-error": "^1.0.1",
    "alphastring": "^1.0.2",
    "powertrain": "^1.0.3"
  },
  "devDependencies": {
    "ava": "^0.17.0",
    "babel-cli": "^6.18.0",
    "babel-core": "^6.18.2",
    "babel-preset-es2015": "^6.18.0",
    "istanbul": "^0.4.5",
    "nyc": "^10.0.0",
    "onchange": "^3.0.2",
    "tap-nyan": "^1.1.0"
  },
  "ava": {
    "require": [
      "babel-register"
    ]
  }
}
