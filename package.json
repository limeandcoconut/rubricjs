{
  "name": "rubricjs",
  "version": "0.1.1",
  "description": "An es6 component, entity, system, framework with a minimal core.",
  "main": "src/index.js",
  "scripts": {
    "start": "webpack --watch",
    "test": "mocha test.js",
    "build": "babel src --out-dir dist --source-maps",
    "prepublish": "npm run build",
    "coverage": "istanbul cover _mocha test.js",
    "coverSrc": "istanbul cover _mocha coverSrc.js",
    "//watchCoverage": "onchange 'src/*.js' 'test/*.js' -i -- npm run coverSrc",
    "watchCoverage": "onchange 'src/*.js' 'test/*.js' -i -- npm run cowboyhat",
    "t": ". ./bin/t.sh",
    "cowboyhat": "node cowboyhat.js",
    "ch": ". ./bin/cowboyhat.sh",
    "nyc": "./node_modules/.bin/nyc ./node_modules/.bin/_mocha test.js"
  },
  "repository": {
    "type": "git",
    "url": "github.com/limeandcoconut/rubricjs"
  },
  "keywords": [
    "ces",
    "component",
    "entity",
    "system",
    "game",
    "framework",
    "engine",
    "raf",
    "loop",
    "update",
    "render"
  ],
  "author": "Jacob A Smith",
  "license": "MIT",
  "dependencies": {
    "abstract-class-error": "^1.0.1",
    "alphastring": "^1.0.2",
    "chokidar": "^1.6.1",
    "extract-text-webpack-plugin": "^2.0.0-beta",
    "mkdirp": "^0.5.1",
    "powertrain": "^1.0.3",
    "remap-istanbul": "^0.8.4",
    "replace-in-file": "^2.2.2"
  },
  "devDependencies": {
    "ava": "^0.17.0",
    "babel-cli": "^6.18.0",
    "babel-core": "^6.18.2",
    "babel-preset-es2015": "^6.18.0",
    "chai": "^3.5.0",
    "istanbul": "1.0.0-alpha.2",
    "jsdoc": "^3.4.3",
    "mocha": "^3.2.0",
    "nyc": "^10.0.0",
    "onchange": "^3.0.2",
    "tap-nyan": "^1.1.0",
    "webpack": "^2.2.0"
  },
  "ava": {
    "require": [
      "babel-register"
    ]
  }
}
